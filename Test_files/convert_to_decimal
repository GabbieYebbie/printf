#include "main.h"

/**
 * convert_to_decimal - it converts base 8 & 16 to base 10
 *
 * Return: decimal
 */
long long convert_to_decimal(int Number, int base)
{
    int decimalNumber = 0, i = 0;

    while Number != 0)
    {
        decimalNumber += (Number%10) * power(base,i);
        ++i;
        Number/=10;
    }

    i = 1;

    return decimalNumber;
}
